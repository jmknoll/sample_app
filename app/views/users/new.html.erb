<% provide(:title, 'Sign up') %>
<h1> Sign up </h1>

	
	<div class="row-fluid">
		<div class="span8">
				<embed src="http://player.youku.com/player.php/sid/XNDA2NTIyODAw/v.swf" allowFullScreen="true" quality="high" width="480" height="400" align="middle" allowScriptAccess="always" type="application/x-shockwave-flash"></embed>
			</div>
		<div class="span4">
			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages' %>
				<%= f.label :name %>
				<%= f.text_field :name %>
	
				<%= f.label :email %>
				<%= f.text_field :email %>

				<%= f.label :password %>
				<%= f.password_field :password %>

				<%= f.label :password_confirmation, "Confirm Password" %>
				<%= f.password_field :password_confirmation %>
				<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>	
	</div>
</div>