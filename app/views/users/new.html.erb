<% provide(:title, 'Sign up') %>
<h1> Sign up </h1>


<div class="container-fluid">
	
	<div class="row-fluid">
		<div class="span8">
				<iframe width="640" height="480" src="http://www.youtube.com/embed/YiA7FcAsCUA" frameborder="0" allowfullscreen></iframe>
			</div>
		<div class="span4">
			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages' %>
		
				<%= f.label :name %>
				<%= f.text_field :name %>
			
			    <%= f.label :email %>
				<%= f.text_field :email %>

				<%= f.label :password %>
				<%= f.password_field :password %>

				<%= f.label :password_confirmation, "Confirmation" %>
				<%= f.password_field :password_confirmation %>

				<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>	
	</div>
</div>